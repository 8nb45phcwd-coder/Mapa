{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@map/engine/*": ["engine/src/*"],
      "@map/ingestion/*": ["ingestion/src/*"],
      "@map/world_model/*": ["world_model/src/*"],
      "world-map-engine": ["engine/src/index.ts"],
      "world-map-engine/*": ["engine/src/*"],
      "world-map-ingestion": ["ingestion/src/index.ts"],
      "world-map-ingestion/*": ["ingestion/src/*"],
      "world-map-world-model": ["world_model/src/index.ts"],
      "world-map-world-model/*": ["world_model/src/*"]
    }
  }
}
